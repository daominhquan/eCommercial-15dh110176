<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_horizontal_nitewatch_item"
    android:layout_width="180dp"
    android:layout_height="match_parent"
    android:background="@color/black_cardview_nitewatch"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_product_cart"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:scaleType="centerInside"
            android:src="@drawable/dongho_1" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_name_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin1"
            android:fontFamily="sans-serif-light"
            android:text="@string/productname"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_total_price_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin1"
            android:text="@string/money"
            android:textColor="@color/LightBlue"
            android:textSize="15sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin1"
            android:orientation="horizontal">

            <Button

                android:id="@+id/minus_one_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_nitewatch_1"
                android:text="-"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/edt_quantity_product_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black_cardview_nitewatch"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/plus_one_product_cart"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_nitewatch_2"
                android:text="+"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>