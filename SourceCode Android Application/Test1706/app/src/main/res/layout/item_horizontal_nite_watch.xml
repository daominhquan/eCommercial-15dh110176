<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black_cardview_nitewatch"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/img_horizontal_product"
        android:background="@drawable/radial_background"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dongho_1" />

    <TextView
        android:id="@+id/tv_horizontal_name"
        android:textColor="@color/LightBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/productname"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_horizontal_category"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/category"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_horizontal_price"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/money"
        android:textSize="15sp"
        android:textStyle="normal" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnview_horizontal_nitewatch"
            android:textColor="@color/white"
            android:background="@drawable/button_nitewatch_1"
            android:text="View"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/btncart_horizontal_nitewatch"
            android:textColor="@color/white"
            android:background="@drawable/button_nitewatch_2"
            android:text="Cart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>



</LinearLayout>