<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:background="@color/black_cardview_nitewatch1"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/layout_horizontal_nitewatch_item">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_horizontal_product"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:background="@drawable/radial_background"
            android:scaleType="fitCenter"
            android:src="@drawable/dongho_1" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_horizontal_product_night"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:background="@drawable/radial_background"
            android:scaleType="fitCenter"
            android:src="@drawable/dongho_1_night" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_horizontal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin1"
        android:fontFamily="sans-serif-light"
        android:text="@string/productname"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_horizontal_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin1"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/category"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView

        android:id="@+id/tv_horizontal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin1"
        android:text="@string/money"
        android:textColor="@color/LightBlue"
        android:textSize="15sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnview_horizontal_nitewatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_nitewatch_1"
            android:text="View"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btncart_horizontal_nitewatch"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_nitewatch_2"
            android:text="Cart"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>