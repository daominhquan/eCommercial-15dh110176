
@using AdminR.Models;


@{
    ViewBag.Title = "Hóa Đơn";
    List<Order> listOrders = ViewBag.List;
    int i = 0;
}




<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản lý hóa đơn</h1>
    <p class="mb-4">Danh mục mặt hàng</p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Dữ liệu từ Firebase</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>paymentid</th>
                            <th>customerName</th>
                            <th>customerAddress</th>
                            <th>customerPhoneNumber</th>
                            <th>status</th>
                            <th>total</th>
                            <th>userID</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>paymentid</th>
                            <th>customerName</th>
                            <th>customerAddress</th>
                            <th>customerPhoneNumber</th>
                            <th>status</th>
                            <th>total</th>
                            <th>userID</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in listOrders)
                        {
                            i++;
                            <tr>
                                <td>@item.paymentid</td>
                                <td>@item.customerName</td>
                                <td>@item.customerAddress</td>
                                <td>@item.customerPhoneNumber</td>
                                <td>@item.status</td>
                                <td>@item.total</td>
                                <td>@item.userID</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>