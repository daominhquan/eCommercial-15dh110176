<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout

                    android:id="@+id/btn_close_fold"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/h_nh_n_t_g_p_c_a_s"
                        android:src="@drawable/ic_arrow_up_close" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/timeline_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_timeline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drw_edt_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/h_nh"
                            android:src="@drawable/ic_account_circle_black_24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="none"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/t_n_ng_i_nh_n"
                                android:textColor="@color/LightBlue"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/admin_details_hoadon_name_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="none"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/cv_phone_admin_order"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margintop_cardview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drw_edt_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/h_nh"
                            android:src="@drawable/ic_phone_blue_24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="none"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/s_i_n_tho_i_ng_i_nh_n"
                                android:textColor="@color/LightBlue"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/admin_details_hoadon_sdt_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="none"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlt_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margintop_cardview">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drw_edt_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/h_nh"
                            android:src="@drawable/ic_home_blue_24dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="none"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/a_ch_giao_h_ng"
                                android:textColor="@color/LightBlue"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/admin_details_hoadon_address_order"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:inputType="none"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/white" />

                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="@string/t_ng_tien"
                        android:textColor="@color/LightBlue"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/admin_details_hoadon_tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="@string/money"
                        android:textColor="@color/black"
                        android:textSize="30sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/danh_s_ch_s_n_ph_m"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/admin_details_hoadon_lv_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    card_view:layoutManager="com.ramotion.cardslider.CardSliderLayoutManager"
                    tools:listitem="@layout/item_checkout_item_slider_card">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_dialog_nhandonhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        app:cardBackgroundColor="#FFB741">

                        <TextView
                            android:id="@+id/tv_Xac_nhan"
                            android:layout_width="156dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="Nhận đơn hàng"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_dialog_tuchoidonhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/margintop_cardview"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:visibility="visible"
                        app:cardBackgroundColor="@color/red">

                        <TextView
                            android:id="@+id/tv_TuChoi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:text="Đóng"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>

