<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margintop_cardview"
    android:layout_marginTop="@dimen/margintop_cardview"
    android:layout_marginEnd="@dimen/margintop_cardview"

    android:orientation="horizontal"
    app:cardBackgroundColor="@color/clearblack"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/layout_horizontal_nitewatch_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_cardview_nitewatch">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_horizontal_product"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/radial_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dongho_1" />

                <ImageView
                    android:id="@+id/img_horizontal_product_night"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/radial_background"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dongho_1"
                    android:visibility="invisible" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_horizontal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/productname"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_horizontal_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="@string/category"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin1"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_horizontal_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/money"
                            android:textColor="@color/LightBlue"
                            android:textSize="20sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_discount_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="-10%"
                            android:textColor="@color/gray"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@drawable/horizontalline"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_realprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="@string/money"
                            android:textColor="@color/gray"
                            android:textSize="20sp"
                            android:textStyle="normal">

                        </TextView>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnview_horizontal_nitewatch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_nitewatch_1"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/xemsanpham"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btncart_horizontal_nitewatch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_nitewatch_2"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/muahang"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/daxem"
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_creation_time_viewedproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="13sp" />
    </LinearLayout>


</android.support.v7.widget.CardView>